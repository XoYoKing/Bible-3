<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.b3studios.bible"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Bible"
            android:label="@string/title_activity_u_bible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookChooser"
            android:label="Select a Book" >
            <intent-filter>
                <action android:name="org.b3studios.bible.BOOKCHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ChapterChooser"
            android:label="Select a Chapter" >
            <intent-filter>
                <action android:name="org.b3studios.bible.CHAPTERCHOOSER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".About"
            android:label="About" >
            <intent-filter>
                <action android:name="org.b3studios.bible.ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    </application>

</manifest>