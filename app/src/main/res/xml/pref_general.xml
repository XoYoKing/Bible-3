<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Font">

        <org.b3studios.bible.slidingmenu.FontStyleListPreference
            android:key="font_style"
            android:title="Set default font style"
            android:dialogTitle="Set default font style"
            android:summary="Your Summary"
            android:defaultValue="4"
            android:entries="@array/pref_font_styles_titles"
            android:entryValues="@array/pref_font_styles_values"/>
        <ListPreference
            android:key="font_size_list"
            android:title="@string/pref_title_set_font_size"
            android:defaultValue="3"
            android:entries="@array/pref_list_font_size"
            android:entryValues="@array/pref_list_values_font_size"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

    <CheckBoxPreference
        android:key="night_mode"
        android:title="@string/pref_title_night_mode"
        android:summary="@string/pref_description_night_mode"
        android:defaultValue="false" />

</PreferenceScreen>
